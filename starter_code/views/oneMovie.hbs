<div class="page-padding oneMovie">
<img class="oneMovie-image" src="{{movie.image}}" alt="movie-image">
  <div class="oneMovie-info">
    <a href="/movies">Go back</a>
    <h2>{{movie.title}}</h2>
    <h3>Director: {{movie.director}}</h3>
    <p>Stars</p>
    <ul>
      {{#each movie.stars}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <p>{{#each movie.showtimes}}
        {{this}}<span> |</span>
        {{/each}}
    </p>
  </div>
</div>

